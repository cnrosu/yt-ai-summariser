{
  "manifest_version": 3,
  "name": "YouTranscribe",
  "description": "Transcribe and analyze YouTube videos using faster-whisper and GPT-4o.",
  "version": "1.0",

  "web_accessible_resources": [
    {
      "resources": ["settings.html"],
      "matches": ["<all_urls>"]
    }
  ],

  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "http://localhost:5010/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "64": "icons/icon64.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["lz-string.min.js", "content.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "48": "icons/icon48.png"
  }
}
